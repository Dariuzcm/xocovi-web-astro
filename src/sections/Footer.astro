---
import FacebookIcon from "../components/Icons/FacebookIcon.astro";
import MailIcon from "../components/Icons/MailIcon.astro";
import WpIcon from "../components/Icons/WpIcon.astro";
---

<footer class="w-auto h-auto">
  <section id="contacto">
    <div class="flex md:flex-row flex-col p-16 md:gap-24 gap-6 items-center justify-center">
      <div class="flex gap-6">
        <a>
          <button
            class:list={[
              "bg-resolution_blue-600",
              "text-white",
              "rounded-2xl",
              "shadow-lg",
              "shadow-white-200",
              "hover:bg-resolution_blue-800",
              "transition-colors",
              "size-12",
              "active:bg-resolution_blue-600",
            ]}><FacebookIcon class="scale-75" /></button
          >
        </a>
        <a
          href="https://wa.me/526181708913?text=Hola,quisiera%20informaci%C3%B3n%20sobre%20los%20productos."
        >
          <button
            class:list={[
              "bg-forest_green-600",
              "text-white",
              "rounded-2xl",
              "shadow-lg",
              "shadow-white-200",
              "hover:bg-forest_green-700",
              "transition-colors",
              "size-12",
              "active:bg-forest_green-600",
            ]}><WpIcon class="scale-75" /></button
          >
        </a>
        <a href="mailto:contacto@xocovi.com">
          <button
            class:list={[
              "bg-red_violet-600",
              "text-white",
              "rounded-2xl",
              "shadow-lg",
              "shadow-white-200",
              "hover:bg-red_violet-800",
              "transition-colors",
              "size-12",
              "active:bg-red_violet-600",
            ]}><MailIcon class="scale-75" /></button
          >
        </a>
      </div>
      <div class="flex flex-col gap-3 justify-center items-center">
        <img class="w-52" src="xocovi-nocontent.png" />
        <hr class="border-white-400 border-[1.5px] my-3 w-full" />
        <p>Precios especiales a distribuidores</p>
      </div>
      <div class="text-center md:text-left">
        <h1 class="text-saffron-400">{"Contáctanos".toUpperCase()}</h1>
        <a
          class="hover:text-saffron-600 hover:underline hover:underline-offset-2 transition-colors"
          href="mailto:contacto@xocovi.com">contacto@xocovi.com</a
        >
      </div>
    </div>
    <div class="w-full text-center">
      <hr class="border-white-400 border-[1.5px]"/>
      <p>© 2024 XOCOVI - Todos los derechos reservados</p>
    </div>
  </section>
</footer>

<style>
  footer {
    background-image: url("slider_footer.jpg");
    object-fit: cover;
  }
</style>
