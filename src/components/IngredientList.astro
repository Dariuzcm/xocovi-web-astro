---

<section id="ingredients" class="bg-saffron py-6 xocovi-image">
  <h1 class="shadowed text-3xl font-semibold text-white text-center p-9">
    Ingredientes
  </h1>

  <div
    class="mx-auto lg:max-w-[60%] flex flex-col justify-center items-center gap-4 ingredient"
  >
    {cardList.map((item) => <IngredientCard {...item} />)}
  </div>
</section>

<style>
  .xocovi-image {
    background-image: linear-gradient(
        to bottom,
        rgb(241 187 10) 10%,
        transparent 95%
      ),
      url("/xocovi-background.webp");
    /* background-image: url("/xocovi-background.png"); */
    background-repeat: repeat space;
    background-size: 12rem;
  }

  @media (min-width: 600px) {
    .ingredient {
      max-width: 70%;
    }
  }
</style>
