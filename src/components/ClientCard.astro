---
import StarIcon from "./Icons/StarIcon.astro";

export interface Props {
  title: string;
  src: string;
  description: string;
  rangeStars?: number;
}

const { title, src, description, rangeStars } = Astro.props;
function range(range: number = 5) {
  let rangeArray: number[] = [];
  while (rangeArray.length !== range) {
    rangeArray.push(rangeArray.length);
  }
  return rangeArray;
}
---

<div
  class:list={[
    "md:h-[400px]",
    "md:w-[700px]",
    "bg-white",
    "rounded-3xl",
    "shadow-2xl",
    "md:p-10 p-4",
  ]}
>
  <div class="w-full rounded-t-3xl flex h-fit content-center pb-8 gap-8">
    <img src={src} class="border-4 border-solid border-red_violet" />
    <div class="content-center items-center flex flex-col my-auto">
      <h1 class="font-bold text-5xl pb-3">{title}</h1>
      <div class="flex">
        {
          range(rangeStars).map((_item) => (
            <>
              <StarIcon />
            </>
          ))
        }
      </div>
    </div>
  </div>
  <div class="h-auto content-center">
    <p class="text-xl italic md:w-auto w-[380px]">
      {description}
    </p>
  </div>
</div>

<style>
  img {
    width: 9rem;
    height: 9rem;
    border-radius: 100%;
  }
</style>
