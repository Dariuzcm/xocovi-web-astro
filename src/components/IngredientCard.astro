---
export interface Props {
  title: string;
  imageSrc: string;
  resume: string;
  processDescripion: string;
}

const { title, imageSrc, resume } = Astro.props;

---

<div class="md:rounded-l-full bg-white p-4 lg:max-w-[1900px] m-3 rounded-xl">
  <div class="flex md:flex-row flex-col justify-center items-center">
    <h1 class="font-semibold text-2xl md:hidden my-6" >{title}</h1>
    <img src={`${imageSrc}`} class="rounded-full size-48" alt="imagen de ingrediente" />
    <div class="flex flex-col px-5 ml-5 gap-5">
      <h1 class="font-semibold text-2xl hidden md:block" >{title}</h1>
      <p>{resume}</p>
    </div>
  </div>
</div>

<style>
  img {
    border-radius: 100%;
    object-fit: cover;
    width: 100%;
    max-width: 192px;
    height: 192px;
    aspect-ratio: 1;
  }
</style>