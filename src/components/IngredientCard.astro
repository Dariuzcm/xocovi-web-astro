---
export type IngredientCardProps = {
  title: string;
  imageSrc: string;
  resume: string;
  processDescripion: string;
}

const { title, imageSrc, resume } = Astro.props;

---

<div class="rounded-l-full bg-white p-4 max-w-[900px]">
  <div class="flex justify-center items-center">
    <img src={`${imageSrc}`} class="rounded-full size-48" alt="imagen de ingrediente" />
    <div class="flex flex-col px-5 ml-5 gap-5">
      <h1 class="font-semibold text-2xl mx-auto" >{title}</h1>
      <p>{resume}</p>
    </div>
  </div>
</div>

<style>
  img {
    border-radius: 100%;
    object-fit: cover;
    width: 100%;
    max-width: 192px;
    height: 192px;
    aspect-ratio: 1;
  }
</style>